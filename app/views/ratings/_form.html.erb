<%= render 'shared/errors', obj: @rating %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@rating, :html => {class: "form-horizontal", role: "form"}) do |a| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= a.label :star_rating %>
          </div>
          <div class="col-sm-8">
            <%= a.text_field :star_rating, class: "form-control", placeholder: "number of stars" %>
          </div>
        </div>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= a.label :rating_text, "Review" %>
          </div>
          <div class="col-sm-8">
            <%= a.text_field :rating_text, class: "form-control", placeholder: "number of stars" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= a.submit class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to agents listing", agents_path %> ]
    </div>
  </div>
</div>