<% obj.each do |rating| %>
    <div class="row">
      <div class="well col-xs-8 col-xs-offset-2">
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1"><label>Agent:</label></div>
          <div class="col-xs-5"><%= link_to rating.agent.name, agent_path(rating.agent) %></div>
        </div>
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1"><label>Suburb:</label></div>
          <div class="col-xs-5"><%= rating.agent.suburb %></div>
        </div>
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1"><label>Star rating:</label></div>
          <div class="col-xs-2 star-rating" data-score="<%= rating.star_rating %>"></div>
        </div>
        <div class="row">
          <div class="col-xs-2 col-xs-offset-1"><label>Review:</label></div>
          <div class="col-xs-8"><%= rating.rating_text %></div>
        </div>
        <div class="row">
          <div class="col-xs-4 col-xs-offset-1 action-buttons">
            <%= link_to "Edit this rating", edit_rating_path(rating), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this rating", rating_path(rating), method: :delete,
                        data: {confirm: "Are you sure you want to delete the selected rating"},
                        class: "btn btn-xs btn-danger" %>
          </div>
        </div>
      </div>
    </div>
<% end %>

<script>
    $('.star-rating').raty({
        path: '/assets/',
        readOnly: true,
        score: function () {
            return $(this).attr('data-score');
        }
    });
</script>
