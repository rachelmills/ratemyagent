<div class="row">
  <div class="well col-xs-8 col-xs-offset-2">
    <div class="row">
      <div class="col-xs-2 col-xs-offset-4"><label>Name:</label></div>
      <div class="col-xs-3"><%= @agent.name %></div>
    </div>
    <div class="row">
      <div class="col-xs-2 col-xs-offset-4"><label>Suburb:</label></div>
      <div class="col-xs-3"><%= @agent.suburb %></div>
    </div>
    <div class="row agent-meta-details">
      <div class="col-xs-8 col-xs-offset-4">
      <small>Created by:  <%= @agent.user.username if @agent.user %>
        <%= time_ago_in_words(@agent.created_at) %> ago,
        last updated: <%= time_ago_in_words(@agent.updated_at) %> ago
      </small>
    </div>
  </div>
</div>

</div>
<div class="col-xs-offset-2">
  <%= link_to "Edit this article", edit_agent_path(@agent), class: "btn btn-xs btn-primary" %>
  <%= link_to "Delete this article", agent_path(@agent), method: :delete,
              data: {confirm: "Are you sure you want to delete the selected agent"},
              class: "btn btn-xs btn-danger" %>
  <%= link_to "View all agents", agents_path, class: "btn btn-xs btn-success" %>
</div>
