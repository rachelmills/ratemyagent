<h1 align="center">Rate My Rental Agent Users</h1>
<div align="center">
  <%= will_paginate renderer: BootstrapPagination::Rails %>
  <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li class="title">
              <%= link_to user.username, user_path(user) %>
            </li>
            <li>
              <small><%= pluralize(user.ratings.count, "rating") if user.ratings %> </small>
              <% if logged_in? && current_user.admin? %>
                <li>
                  <%= link_to "Delete this user", user_path(user),
                              method: :delete,
                              data: {confirm: 'Are you sure you want to delete the user and all their ratings'} %>
            <% end %>
            </li>
          </div>
        </div>
      </ul>
  <% end %>
  <%= will_paginate renderer: BootstrapPagination::Rails %>
</div>